<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".BoardWriteFragment" android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/board_write_toolbar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="10dp">
            <TextView
                    android:text="게시판 종류"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/board_write_board_type"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            <TextView
                    android:text="제목"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/board_write_title"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            <TextView
                    android:text="내용"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/board_write_contents"/>
            <ImageView
                    android:src="@drawable/splash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/board_write_img"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>